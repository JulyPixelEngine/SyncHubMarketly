<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.synchub.marketly.infrastructure.persistence.mapper.ScrapeCategoryMapper">

    <resultMap id="ScrapeCategoryResultMap" type="com.synchub.marketly.domain.scraper.ScrapeCategory">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="targetUrl" column="target_url"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAllActive" resultMap="ScrapeCategoryResultMap">
        SELECT id, name, target_url, is_active, created_at, updated_at
        FROM scrape_categories
        WHERE is_active = TRUE
        ORDER BY name
    </select>

    <select id="findById" resultMap="ScrapeCategoryResultMap">
        SELECT id, name, target_url, is_active, created_at, updated_at
        FROM scrape_categories
        WHERE id = #{id}
    </select>

</mapper>
